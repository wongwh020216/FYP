<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeScreenActivity">

    <Button
        android:id="@+id/vehicle_renting_button"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:text="Vehicle Renting"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:background="@drawable/rounded_button"
        android:padding="16dp"
        android:textAllCaps="false"/>

    <Button
        android:id="@+id/visitor_registration_button"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_below="@id/vehicle_renting_button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Visitor Registration"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:background="@drawable/rounded_button"
        android:padding="16dp"
        android:textAllCaps="false"/>

    <Button
        android:id="@+id/emergency_services_button"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_below="@id/visitor_registration_button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Emergency Services"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:background="@drawable/rounded_button"
        android:padding="16dp"
        android:textAllCaps="false"/>

    <Button
        android:id="@+id/facilities_button"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_below="@id/emergency_services_button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Facilities Available"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:background="@drawable/rounded_button"
        android:padding="16dp"
        android:textAllCaps="false"/>

    <Button
        android:id="@+id/logout_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:text="Logout"
        android:textColor="#FF1100"
        android:background="@drawable/rounded_button"
        android:textSize="18sp"
        android:textAllCaps="false"/>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/light_gray"
        app:menu="@menu/navigation_bar" />

</RelativeLayout>
