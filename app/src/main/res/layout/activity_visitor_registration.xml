<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".VisitorRegistrationActivity">

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/light_gray"
        app:menu="@menu/navigation_bar" />

    <EditText
        android:id="@+id/visitor_name"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:textColor="#000000"
        android:textSize="16sp"
        android:padding="11dp"
        android:background="@drawable/edit_text_background"
        android:layout_marginTop="150dp"
        android:hint="Name" />

    <EditText
        android:id="@+id/visitor_phone_number"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:hint="Phone Number"
        android:textColor="#000000"
        android:textSize="16sp"
        android:padding="11dp"
        android:background="@drawable/edit_text_background"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/visitor_name"
        android:layout_marginTop="20dp"
        />

    <EditText
        android:id="@+id/purpose_visit"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/visitor_phone_number"
        android:layout_marginTop="20dp"
        android:textColor="#000000"
        android:textSize="16sp"
        android:padding="11dp"
        android:background="@drawable/edit_text_background"

        android:hint="Purpose of visit"
        />

    <EditText
        android:id="@+id/visitor_vehicle_number"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/purpose_visit"
        android:layout_marginTop="70dp"
        android:hint="Vehicle Number"
        android:textColor="#000000"
        android:textSize="16sp"
        android:padding="12dp"
        android:background="@drawable/edit_text_background"
        android:visibility="invisible"
        />

    <TextView
        android:id="@+id/visit_date_txt"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_below="@+id/visitor_vehicle_number"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:hint="Visit Date"
        android:textColor="#000000"
        android:textSize="16sp"
        android:padding="11dp" />

    <Button
        android:id="@+id/visit_date_button"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_below="@+id/visitor_vehicle_number"
        android:layout_alignRight="@+id/visit_date_txt"
        android:layout_marginTop="20dp"
        android:textColor="#FFFFFF"
        android:background="@drawable/button_background"
        android:text="Choose.." />

    <TextView
        android:id="@+id/end_date_txt"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_below="@+id/visit_date_txt"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:hint="End Date"
        android:textColor="#000000"
        android:textSize="16sp"
        android:padding="11dp" />

    <Button
        android:id="@+id/end_date_button"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_below="@+id/visit_date_button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_alignRight="@+id/end_date_txt"
        android:textColor="#FFFFFF"
        android:background="@drawable/button_background"
        android:text="Choose..." />

    <Button
        android:id="@+id/walk_in_vehicle_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/purpose_visit"
        android:layout_marginTop="20dp"
        android:textColor="#FFFFFF"
        android:background="@drawable/button_background"
        android:text="Walk-In" />

    <Button
        android:id="@+id/overnight_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/end_date_txt"
        android:textColor="#FFFFFF"
        android:background="@drawable/button_background"
        android:text="Overnight" />

    <Button
        android:id="@+id/confirm_button"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="630dp"
        android:textColor="#FFFFFF"
        android:background="@drawable/button_background_confrim"
        android:text="Confirm" />


</RelativeLayout>